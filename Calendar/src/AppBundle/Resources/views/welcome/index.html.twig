{% extends 'base.html.twig' %}
{% block title %}{{ 'Google Calendar Conn'|trans }}{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <style>
        .top20 {
            margin-top: 20px;
        }
    </style>
{% endblock %}

{% block body %}

    <div class="container">
        <div class="row top20">

            {% for type, flashMessages in app.session.flashbag.all() %}
                {% for flashMessage in flashMessages %}
                    <div class="alert alert-{{ type }}">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                        {{ flashMessage }}
                    </div>
                {% endfor %}
            {% endfor %}

            <h1 class="text-center">Click on button to connect Google Calendar</h1>
            <div class="text-center top20">
                    <button class="btn" onclick="location.href = '{{ path('new_reminder') }}';">{{ 'reminder'|trans }}</button>
                    <button class="btn" onclick="location.href = '{{ path('auth') }}';">Connexion</button>
                    <button class="btn" onclick="location.href = '{{ path('session_clear') }}';">Clear Session</button>
                {#4/mCg8EK5gCIwAo4grBX2jChdY-R4grqbQvsLI236ebpY#}
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}